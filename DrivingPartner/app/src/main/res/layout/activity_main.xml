<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/view1_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_main"
            style="@style/ToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_toolbar"
            android:height="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:id="@+id/search_layout_main"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7">

                    <ImageView
                        android:id="@+id/search_icon_main"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/icon_sreach" />

                    <TextView
                        style="@style/ToolbarTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/search_icon_main"
                        android:gravity="center_vertical"
                        android:text="@string/hint_searchview_toolbar_main" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@id/search_icon_main"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/line_white" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/toolbar_main"
            android:background="@color/basic_blue_dark" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab" />

        <LinearLayout
            android:id="@+id/under"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@color/basic_white">

            <Button
                android:id="@+id/start_button_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/basic_blue_dark"
                android:text="길안내시작"
                android:textSize="9pt"
                android:textStyle="bold"
                android:textColor="@color/basic_white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/under_btn_up"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/under_btn"
            android:layout_above="@id/under"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view2_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_search111"
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/basic_blue_dark"/>

        <ImageView
            android:id="@+id/under_btn_down"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/under_donw_btn"
            android:layout_above="@id/recyclerview_search111"
            android:layout_centerHorizontal="true"/>

        </RelativeLayout>


</RelativeLayout>