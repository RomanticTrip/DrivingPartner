<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/title_text_lister_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaa"
        android:textSize="9pt"
        android:textColor="@color/basic_black"/>

    <TextView
        android:id="@+id/address_text_lister_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text_lister_search"
        android:text="aaaa"
        android:textSize="7pt" />

    <TextView
        android:id="@+id/distance_text_lister_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text_lister_search"
        android:layout_toRightOf="@id/address_text_lister_search"
        android:layout_marginLeft="5dp"
        android:text="aaaa"
        android:textSize="7pt"
        android:textColor="@color/basic_blue"/>

</RelativeLayout>
