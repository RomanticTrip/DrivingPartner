<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devfactory.drivingpartner.app.seach.SearchActivity"
    android:id="@+id/layout_search">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:height="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/search_layout_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="7">

                <ImageView
                    android:id="@+id/back_icon_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_sreach" />

                <EditText
                    android:id="@+id/edit_search"
                    style="@style/ToolbarTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/back_icon_search"
                    android:autoText="false"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_searchview_toolbar_main">
                </EditText>

                <ImageView
                    android:id="@+id/remove_icon_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/icon_camera"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/back_icon_search"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="38dp"
                    android:src="@drawable/line_white" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/listView_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_main" />

</RelativeLayout>
