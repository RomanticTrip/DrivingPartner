<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devfactory.drivingpartner.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_toolbar"
        android:height="?actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/search_layout_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/back_icon_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_camera"/>
                <EditText
                    android:id="@+id/edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/back_icon_search"
                    android:layout_marginLeft="10dp"
                    android:hint="@string/hint_searchview_toolbar_main"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:autoText="false"
                    style="@style/ToolbarTextStyle"/>
                <ImageView
                    android:id="@+id/remove_icon_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:visibility="invisible"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="38dp"
                    android:src="@drawable/underline_search_main"
                    android:layout_below="@id/back_icon_search"/>
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:paddingBottom="3dp"
                android:text="추천"
                android:gravity="center_vertical|right"
                style="@style/ToolbarTextStyle" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_search"
        android:layout_below="@+id/toolbar_main"
        android:layout_alignParentStart="true" />


</RelativeLayout>
